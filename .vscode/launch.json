{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[Frontend] Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "runtimeExecutable": "beta",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/frontend",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js"
      ]
    },
    {
      "name": "[Frontend] Debug server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "[Frontend] Debug server (prod db)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "envFile": "${workspaceFolder}/.env.production"
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": ["[Frontend] Debug server", "[Frontend] Chrome"]
    },
    {
      "name": "Debug All (prod db)",
      "configurations": [
        "[Frontend] Debug server (prod db)",
        "[Frontend] Chrome"
      ]
    }
  ]
}
